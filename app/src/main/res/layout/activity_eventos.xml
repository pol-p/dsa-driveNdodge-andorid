<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backclean2"
        android:scaleType="centerCrop" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <Button
            android:id="@+id/btnBackEventos"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:background="@drawable/redrectanglebttn"
            android:fontFamily="@font/pressstart2pregular"
            android:text="VOLVER"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEventosTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENTOS"
            android:textSize="32sp"
            android:textColor="#FFEB3B"
            android:fontFamily="@font/vt323regular"
            app:layout_constraintTop_toTopOf="@id/btnBackEventos"
            app:layout_constraintBottom_toBottomOf="@id/btnBackEventos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEventos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBackEventos"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/row_evento" />

        <ProgressBar
            android:id="@+id/progressBarEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
