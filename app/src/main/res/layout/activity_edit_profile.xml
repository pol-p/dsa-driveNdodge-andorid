<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backclean"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/vt323regular"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="EDITAR PERFIL"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatarContainer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivEditAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#333333"
                    android:padding="0dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvChangeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Toca para cambiar)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/vt323regular"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cardAvatarContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEditProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#B3000000"
                app:cardCornerRadius="18dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvChangeHint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- NOMBRE -->
                    <TextView
                        android:id="@+id/lblNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vt323regular"
                        android:text="NOMBRE"
                        android:textColor="#FFD700"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etEditNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:fontFamily="@font/vt323regular"
                        android:hint="Introduce tu nombre"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/lblNombre"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- APELLIDO -->
                    <TextView
                        android:id="@+id/lblApellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/vt323regular"
                        android:text="APELLIDO"
                        android:textColor="#FFD700"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/etEditNombre"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/etEditApellido"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:fontFamily="@font/vt323regular"
                        android:hint="Introduce tu apellido"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/lblApellido"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- EMAIL -->
                    <TextView
                        android:id="@+id/lblEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/vt323regular"
                        android:text="EMAIL"
                        android:textColor="#FFD700"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/etEditApellido"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/etEditEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:fontFamily="@font/vt323regular"
                        android:hint="correo@ejemplo.com"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/lblEmail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- FECHA -->
                    <TextView
                        android:id="@+id/lblFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/vt323regular"
                        android:text="FECHA DE NACIMIENTO"
                        android:textColor="#FFD700"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/etEditEmail"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/etEditFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:fontFamily="@font/vt323regular"
                        android:hint="YYYY-MM-DD"
                        android:inputType="date"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/lblFecha"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bluerectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:fontFamily="@font/vt323regular"
                android:text="GUARDAR"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/cardEditProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnCancelEdit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:fontFamily="@font/vt323regular"
                android:text="CANCELAR"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@id/btnSaveChanges"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>