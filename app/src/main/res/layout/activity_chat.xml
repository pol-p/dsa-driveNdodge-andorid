<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.4"/>

    <LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="15dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ia_logo"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IA - ON BOARD"
        android:fontFamily="@font/pressstart2pregular"
        android:textColor="#00FF00"
        android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vt323regular"
            android:text="ONLINE - 100%"
            android:textColor="#AAAAAA"
            android:textSize="18sp" />
</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:background="#CC000000">

        <EditText
        android:id="@+id/edittext_chatbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Escribe..."
        android:textColor="#FFFFFF"
        android:textColorHint="#88FFFFFF"
        android:fontFamily="@font/vt323regular"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#444444"
        android:padding="12dp"
        android:textSize="22sp"/>

        <Button
            android:id="@+id/button_chatbox_send"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/redrectanglebttn"
            android:text="GO"
            android:fontFamily="@font/pressstart2pregular"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reyclerview_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/layout_chatbox"
        android:paddingTop="10dp"
        android:clipToPadding="false"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#00FF00"
        android:visibility="gone"/>

</RelativeLayout>