<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand_beige"
    android:padding="24dp">

    <ImageView
        android:id="@+id/sunIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round"
        app:tint="@color/sun_yellow"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRIVE N DODGE"
        android:fontFamily="sans-serif-black"
        android:textSize="28sp"
        android:textColor="@color/ocean_blue"
        android:letterSpacing="0.05"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sunIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvMenuTitle"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playBttn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="JUGAR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:backgroundTint="@color/ocean_blue"
            app:cornerRadius="30dp"
            app:elevation="6dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shopBttn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="TIENDA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textStart"
            app:backgroundTint="@color/sunset_orange"
            app:cornerRadius="30dp"
            app:elevation="6dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rankBttn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="RANKING"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:icon="@android:drawable/star_on"
            app:iconGravity="textStart"
            app:backgroundTint="@color/sun_yellow"
            app:cornerRadius="30dp"
            app:elevation="6dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/perfilBttn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="PERFIL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textStart"
            app:backgroundTint="@color/palm_green"
            app:cornerRadius="30dp"
            app:elevation="6dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERRAR SESIÃ“N"
        android:textColor="@color/ocean_blue"
        android:textStyle="bold"
        style="@style/Widget.Material3.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>