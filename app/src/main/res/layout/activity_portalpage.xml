<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backclean2"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:id="@+id/portalScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="464dp"
                android:layout_height="274dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/playBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/bluerectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="JUGAR"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/logoIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/shopBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="TIENDA"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/playBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/inventoryBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="INVENTARIO"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/shopBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/rankBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="RANKING"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/inventoryBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/perfilBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="PERFIL"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/rankBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/clansBttn"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/redrectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="CLANES"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/perfilBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/logoutButton"
                android:fontFamily="@font/pressstart2pregular"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:background="@drawable/orangerectanglebttn"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="CERRAR SESIÃ“N"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/clansBttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_chat_custom"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"

                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="#EF7A58"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ia_logo_nar" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>
